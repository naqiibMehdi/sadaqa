APP_NAME="Mon Application (Test)"
APP_ENV=testing
APP_KEY=votre_clé_d_application
APP_DEBUG=true
APP_URL=http://localhost

# Utiliser SQLite en mémoire pour les tests rapides
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Ou utiliser une base de données MySQL dédiée aux tests
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=monapp_testing
# DB_USERNAME=root
# DB_PASSWORD=

# Désactiver les fonctionnalités qui ne sont pas nécessaires pour les tests
BROADCAST_DRIVER=null
CACHE_DRIVER=array
MAIL_MAILER=array
QUEUE_CONNECTION=sync
SESSION_DRIVER=array
TELESCOPE_ENABLED=false

# Désactiver les services externes
STRIPE_KEY=votre_clé_stripe_test
STRIPE_SECRET=votre_secret_stripe_test
